@model PMS.DTOs.TypeDTO

@{
    ViewBag.Title = "CreateRole";
    Layout = "~/Views/Shared/_InnerLayout.cshtml";
}

@if (TempData["Msg"] != null)
{
    <span class="alert-danger">@TempData["Msg"]</span>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>TypeDTO</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="Type1" class="control-label col-md-2">Type</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Type1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Type1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
   <a href="/Admin/Role">Back to List</a>
</div>
