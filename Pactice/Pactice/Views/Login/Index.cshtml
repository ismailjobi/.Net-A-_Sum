
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action=" " method="post">

    <div class="form-horizontal">

        @if (TempData["Msg"] != null)
        {
            <span class="text-danger">@TempData["Msg"]</span>
        }
        <hr />
        <input type="hidden" name="URL" value="@ViewBag.URL" />
        <div class="form-group">
            <label for="Uname" class="control-label col-md-2">UserName</label>
            <div class="col-md-10">
                <input type="text" id="Uname" name="UserName" value="@(Model != null && Model.UserName != null ? Model.UserName : "")" class="form-control" />
                <span class="text-danger">@Html.ValidationMessage("UserName")</span>
            </div>
        </div>

        <div class="form-group">
            <label for="Pass" class="control-label col-md-2">Password</label>
            <div class="col-md-10">
                <input type="password" id="Pass" name="Password" value="@(Model != null && Model.Password != null ? Model.Password : "")" class="form-control" />
                <span class="text-danger">@Html.ValidationMessage("Password")</span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a href="/Home/Index">Back to List</a>
</div>
